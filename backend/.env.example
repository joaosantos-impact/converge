# Database
DATABASE_URL="postgresql://user:password@localhost:5432/converge?schema=public"
# Production (e.g. Railway): use sslmode=verify-full to avoid pg v9 SSL semantics warning
# DATABASE_URL="postgresql://user:pass@host:5432/db?sslmode=verify-full"

# Better Auth
BETTER_AUTH_SECRET=your_secret_key_at_least_32_characters_long
BETTER_AUTH_URL=http://localhost:3000

# OAuth (optional — leave empty to disable social sign-in)
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Encryption key for storing API keys in database (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_random_32_byte_encryption_key

# Salt for key derivation (generate with: openssl rand -hex 16)
ENCRYPTION_SALT=your_random_salt_here

# Admin emails (comma-separated) — grants access to /admin panel
ADMIN_EMAILS=your@email.com

# Frontend URL (for CORS in development)
FRONTEND_URL=http://localhost:3000

# Redis (optional — for sync queue; without it, sync runs in-process)
# Format: redis://[user:password@]host:port or rediss:// for TLS (e.g. Railway)
# REDIS_URL=redis://localhost:6379

# Resend (optional — for "Enviar para contabilista" on taxes page)
# Get API key at https://resend.com
# RESEND_API_KEY=
# TAX_REPORT_FROM_EMAIL=notificacoes@seudominio.pt

# Port
PORT=4000
