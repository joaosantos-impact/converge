# Database
DATABASE_URL="postgresql://user:password@localhost:5432/converge?schema=public"

# Better Auth
BETTER_AUTH_SECRET=your_secret_key_at_least_32_characters_long
BETTER_AUTH_URL=http://localhost:4000

# Encryption key for storing API keys in database (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_random_32_byte_encryption_key

# Salt for key derivation (generate with: openssl rand -hex 16)
ENCRYPTION_SALT=your_random_salt_here

# Admin emails (comma-separated) â€” grants access to /admin panel
ADMIN_EMAILS=your@email.com

# Frontend URL (for CORS in development)
FRONTEND_URL=http://localhost:3000

# Port
PORT=4000
