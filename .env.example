# Database
DATABASE_URL="postgresql://user:password@localhost:5432/converge?schema=public"

# Better Auth
BETTER_AUTH_SECRET=your_secret_key_at_least_32_characters_long
BETTER_AUTH_URL=http://localhost:3000

# OAuth (optional — leave empty to disable social sign-in)
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Encryption key for storing API keys in database (generate with: openssl rand -base64 32)
# This key is used to encrypt/decrypt exchange API credentials stored in the database
ENCRYPTION_KEY=your_random_32_byte_encryption_key

# Salt for key derivation (generate with: openssl rand -hex 16)
ENCRYPTION_SALT=your_random_salt_here

# Note: Exchange API keys are stored securely in the database per user
# Users can add their own exchange accounts through the app interface

# Twitter/X API (for news feed)
# Get your API keys at https://developer.twitter.com
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Admin emails (comma-separated) — grants access to /admin panel
ADMIN_EMAILS=your@email.com

# Redis (for scalable sync queue — optional: without it, sync runs directly)
# Get Redis on Railway: railway.com/template/redis
REDIS_URL=redis://localhost:6379

# NestJS backend URL (used by Next.js rewrites to proxy /api/* requests)
# In production: set to your Railway deployment URL
# In development: the NestJS server runs on port 4000
NEXT_PUBLIC_API_URL=http://localhost:4000
